<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.purvampujari.magicmove.Main2Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:id="@+id/imageView2" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
  android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#43cc34"
        android:onClick="sho" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:backgroundTint="#48a15c"
        android:id="@+id/editText"
        android:textColor="#d13131"
        android:hint="username"
        android:textColorHint="#d13131"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/button"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:textCursorDrawable="@android:color/holo_blue_dark" />
</RelativeLayout>
